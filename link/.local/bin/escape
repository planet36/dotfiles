#!/usr/bin/env -S bash --noprofile --norc --restricted
# SPDX-FileCopyrightText: Steven Ward
# SPDX-License-Identifier: MPL-2.0

# https://www.gnu.org/software/bash/manual/html_node/Bash-Builtins.html
#  %q
#    Causes printf to output the corresponding argument in a format that can be
#    reused as shell input.
#
# https://www.gnu.org/software/bash/manual/html_node/Bash-Variables.html#index-REPLY
#  REPLY
#    The default variable for the read builtin; set to the line read when read
#    is not supplied a variable name argument.
while read -r
do
    printf '%q\n' "$REPLY"
done
