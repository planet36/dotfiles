#!/usr/bin/bash
# SPDX-FileCopyrightText: Steven Ward
# SPDX-License-Identifier: OSL-3.0

# https://man7.org/linux/man-pages/man1/bash.1.html#SHELL_BUILTIN_COMMANDS
set -o pipefail

readonly LOCATION_SH="$XDG_RUNTIME_DIR"/location.sh

function cleanup
{
	rm -f -- "$LOCATION_SH"
	exit "$1"
}

if [[ -z "$LAT" || -z "$LON" ]] && [[ ! -f "$LOCATION_SH" ]]
then
	readonly IP_URI='http://ip-api.com/line/?fields=lat,lon'
	curl -s -f "$IP_URI" | awk 'NR==1{print "export LAT=" $0} NR==2{print "export LON=" $0}' > "$LOCATION_SH" || cleanup "${PIPESTATUS[0]}"
fi
