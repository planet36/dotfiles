[alias]
	br = branch
	ci = commit
	co = checkout
	d = diff
	dt = difftool
	f = fetch
	info = remote -v show
	lg = log --color --decorate --oneline --graph
	lgg = log --color --decorate --oneline --graph --all
	lggg = log --color --decorate --oneline --graph --all --pretty=format:'%Cred%h%Creset %Cblue%ad%Creset %s%Cred%d%Creset %Cgreen%an%Creset' --date=short
	pr = pull --rebase
	s = status
	ss = status -s
	sw = switch
[branch]
	sort = -committerdate
[column]
	ui = auto
[commit]
	verbose = true
[core]
	editor = nvim
	fsmonitor = true
[diff]
	algorithm = histogram
	colorMoved = plain
	guitool = meld
	mnemonicPrefix = true
	tool = nvimdiff
[difftool]
	prompt = false
[fetch]
	all = true
[help]
	autoCorrect = prompt
[include]
	path = ~/.config/git/private.gitconfig
[init]
	defaultBranch = main
[log]
	date = iso
[merge]
	conflictStyle = zdiff3
	guitool = meld
	tool = nvimdiff
[mergetool]
	keepBackup = false
[mergetool "meld"]
	hasOutput = true
	useAutoMerge = true
[pull]
	rebase = false
[push]
	autoSetupRemote = true
[rebase]
	autoSquash = true
	autoStash = true
	updateRefs = true
[rerere]
	autoupdate = true
	enabled = true
[sendemail]
	suppresscc = self
[tag]
	sort = version:refname

# https://github.com/dandavison/delta
# https://dandavison.github.io/delta/full---help-output.html
[core]
	pager = delta
[interactive]
	diffFilter = delta --color-only
[delta]
	line-numbers = true
	side-by-side = true
	tabs = 4
