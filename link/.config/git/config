[alias]
	br = branch
	ci = commit
	co = checkout
	d = diff
	dt = difftool
	f = fetch
	info = remote -v show
	lg = log --color --decorate --oneline --graph
	lgg = log --color --decorate --oneline --graph --all
	lggg = log --color --decorate --oneline --graph --all --pretty=format:'%Cred%h%Creset %Cblue%ad%Creset %s%Cred%d%Creset %Cgreen%an%Creset' --date=short
	ss = status -s
	s = status
[core]
	editor = nvim
[diff]
	tool = nvimdiff
	guitool = meld
[difftool]
	prompt = false
[include]
	path = ~/.config/git/private.gitconfig
[init]
	defaultBranch = main
[merge]
	tool = kdiff3
	conflictstyle = diff3
[pack]
	windowMemory = 1g
	packSizeLimit = 1g
[pull]
	rebase = false
[sendemail]
	suppresscc = self

# https://github.com/dandavison/delta
[core]
	pager = delta
[interactive]
	diffFilter = delta --color-only
[delta]
	features = side-by-side line-numbers decorations
	whitespace-error-style = 22 reverse
[delta "decorations"]
	commit-decoration-style = bold yellow box ul
	file-style = bold yellow ul
	file-decoration-style = none
