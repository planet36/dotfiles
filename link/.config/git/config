[alias]
	br = branch
	ci = commit
	co = checkout
	d = diff
	dt = difftool
	f = fetch
	info = remote -v show
	lg = log --color --decorate --oneline --graph
	lgg = log --color --decorate --oneline --graph --all
	lggg = log --color --decorate --oneline --graph --all --pretty=format:'%Cred%h%Creset %Cblue%ad%Creset %s%Cred%d%Creset %Cgreen%an%Creset' --date=short
	pr = pull --rebase
	s = status
	ss = status -s
[commit]
	verbose = true
[core]
	editor = nvim
	fsmonitor = true
[diff]
	guitool = meld
	tool = nvimdiff
[difftool]
	prompt = false
[include]
	path = ~/.config/git/private.gitconfig
[init]
	defaultBranch = main
[log]
	date = iso
[merge]
	conflictStyle = zdiff3
	guitool = meld
	keepBackup = false
	tool = nvimdiff
[mergetool "meld"]
	hasOutput = true
	useAutoMerge = true
[pull]
	rebase = false
[rebase]
	autoStash = true
[sendemail]
	suppresscc = self

# https://github.com/dandavison/delta
[core]
	pager = delta
[interactive]
	diffFilter = delta --color-only
[delta]
	features = side-by-side line-numbers decorations
	tabs = 4
	whitespace-error-style = 22 reverse
[delta "decorations"]
	commit-decoration-style = bold yellow box ul
	file-decoration-style = none
	file-style = bold yellow ul
